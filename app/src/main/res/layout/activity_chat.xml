<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:orientation="vertical"
    android:weightSum="20"
    android:id="@+id/chatLay"
    tools:context="com.sstudio.nameless.ChatActivity">

    <FrameLayout
        android:layout_weight="19"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/chats"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:stackFromBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="45dp"
            android:transcriptMode="alwaysScroll" />
<LinearLayout
    android:layout_width="match_parent"
    android:background="#cdb5e0fa"
    android:weightSum="3"
    android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="#tag"
        android:textColor="#86020f"
        android:textStyle="bold"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:gravity="top|center"
        android:id="@+id/tagTV"/>
    <TextView
        android:layout_weight="1"
        android:text="Online on this tag"
        android:layout_width="wrap_content"
        android:gravity="top|center"
        android:textColor="#400286"
        android:textStyle="bold"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_height="match_parent"
        android:id="@+id/onlineOnTag"/>
    <TextView
        android:id="@+id/onlineCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top|center"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="Online"
        android:textColor="#028602"
        android:textStyle="bold" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:gravity="bottom|center"
    android:layout_height="match_parent">



        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/holo_blue_light"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:weightSum="10">
            <ImageView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emojiB"
                android:background="@android:color/transparent"
                android:src="@drawable/emoji_recent"/>

            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                android:inputType="textMultiLine"
                android:minLines="3"
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="8"
                android:background="@drawable/edback"
                android:hint="Type your message."
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" />

            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_send" />
        </LinearLayout>
</LinearLayout>
    </FrameLayout>
</LinearLayout>
